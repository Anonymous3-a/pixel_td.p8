pico-8 cartridge // http://www.pico-8.com
version 36
__lua__
function _init()
	x = 4
	y = 70
	jmp = nil

	B = {
		LEFT = 0,
		RIGHT = 1,
		UP = 2,
		DOWN = 3,
	}
end

function _update()
	if btn(B.LEFT)  then x=x-1 end
	if btn(B.RIGHT) then x=x+1 end

	if jmp ~= nil then
		jmp=jmp+1
		if jmp > 30 then jmp=nil end
	end
	if btnp(B.UP) and jmp == nil then jmp=1 end
end

function _draw()
	cls(0)
	spr(1, x, y, 2, 2) -- skele
	spr(3, 40, 30, 1, 1) -- star
end
